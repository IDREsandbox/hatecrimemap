{
  "name": "hatecrimemap",
  "version": "1.0.0",
  "description": "AISC Hate Crime Map Application",
  "engines": {
    "node": "8.9.x"
  },
  "scripts": {
    "start": "node server",
    "heroku-postbuild": "cd client/ && npm install && npm install --only=dev --no-shrinkwrap && npm run build",
    "server": "nodemon server",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },
  "cacheDirectories": [
    "node_modules",
    "client/node_modules"
  ],
  "dependencies": {
    "axios": "^0.18.1",
    "body-parser": "^1.19.0",
    "concurrently": "^3.5.1",
    "cron": "^1.7.2",
    "dotenv": "^5.0.1",
    "express": "^4.17.1",
    "helmet": "^3.21.1",
    "nodemailer": "^4.6.7",
    "pg-promise": "^8.7.5",
    "valid-url": "^1.0.9"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/IDREsandbox/hatecrimemap"
  },
  "keywords": [
    "node",
    "heroku",
    "create-react-app",
    "react"
  ],
  "license": "MIT",
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.15.1",
    "nodemon": "^1.19.3"
  }
}
